<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Todo App</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>

  <body class="bg-zinc-900 text-white">
    <div class="min-h-screen flex items-center justify-center px-4">
      <div
        class="w-full max-w-5xl grid grid-cols-1 md:grid-cols-2 gap-8 animate-fade-in"
      >
        <div
          class="bg-zinc-800 p-8 rounded-2xl shadow-xl hover:shadow-2xl transition"
        >
          <h1 class="text-2xl font-semibold mb-6 text-center">
            Create Task âœï¸
          </h1>

          <form class="space-y-4" method="POST" action="/create">
            <input
              type="text"
              name="title"
              placeholder="Task Title"
              class="w-full px-4 py-2 rounded-lg bg-zinc-700 placeholder-zinc-400 focus:outline-none focus:ring-2 focus:ring-blue-500"
              required
            />

            <textarea
              name="description"
              placeholder="Write task details..."
              rows="4"
              class="w-full px-4 py-2 rounded-lg bg-zinc-700 placeholder-zinc-400 focus:outline-none focus:ring-2 focus:ring-blue-500 resize-none"
              required
            ></textarea>

            <button
              type="submit"
              class="w-full py-2 rounded-lg bg-blue-600 font-medium hover:bg-blue-700 active:scale-95 transition"
            >
              Create Task
            </button>
          </form>
        </div>

        <div
          class="bg-zinc-800 p-6 rounded-2xl shadow-xl hover:shadow-2xl transition"
        >
          <h2 class="text-xl font-semibold mb-4">Your Tasks ğŸ“‹</h2>

          <div class="space-y-4">
            <% if (files.length > 0) { %>
              <% files.forEach(function(val) { %>
                <div
                  class="bg-zinc-700 p-4 rounded-xl flex justify-between gap-4 hover:bg-zinc-600 transition"
                >
                  <div>
                    <h3 class="font-semibold"><%= val %></h3>
                  </div>

                  <div class="flex flex-col gap-2 items-end">
                    <a
                      href="/file/<%= val %>"
                      class="text-xs px-3 py-1 rounded bg-zinc-600 hover:bg-zinc-500 transition"
                    >
                      Read More
                    </a>

                    <a href="/edit/<%=val%>" class="text-xs px-3 py-1 rounded bg-blue-500/20 text-blue-400
                    hover:bg-blue-500/30 hover:text-blue-300 transition active:scale-95">
                    âœï¸ Edit
                  </a>

                  </div>
                </div>
              <% }) %>
            <% } else { %>
              <div
                class="text-center py-10 text-zinc-400 border border-dashed border-zinc-600 rounded-xl"
              >
                ğŸš« No tasks yet
                <p class="text-sm mt-1">
                  Add your first task to get started
                </p>
              </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>

    <script src="/js/script.js"></script>
  </body>
</html>
